---
import Layout from "../../layouts/Layout.astro"
import Footer from "../../components/Footer.astro"
import Link from "../../components/Link.astro"
import DevCarousel from "../../components/DevCarousel.svelte"

const title = "Development"
const description = "Ryu's development list. Software, web application, module, client tool, etc."
---

<Layout title={title} description={description}>
  <div class="flex justify-center overflow-hidden">
    <div class="my-16 flex max-w-lg flex-col items-center justify-center gap-5 tall:my-0 tall:h-screen">
      <h1 class="text-center text-3xl">{title}</h1>
      <nav class="flex h-40 max-w-sm flex-col justify-center">
        <DevCarousel client:load />
      </nav>
      <div class="flex justify-center">
        <Link href="/">Home</Link>
      </div>
      <Footer />
    </div>
  </div>
</Layout>
