---
import Layout from "../../layouts/Layout.astro"
import Footer from "../../components/Footer.astro"
import Link from "../../components/Link.astro"
import ProjectCarousel from "../../components/ProjectCarousel.svelte"

const title = "Projects"
const description = "Ryu's projects. Software, web application, module, client tool, etc."
---

<Layout title={title} description={description}>
  <div class="flex justify-center overflow-hidden">
    <div class="flex min-h-svh max-w-lg flex-col items-center justify-center gap-4">
      <h1 class="text-center text-3xl">{title}</h1>
      <nav class="flex h-40 max-w-sm flex-col justify-center">
        <ProjectCarousel client:load />
      </nav>
      <div class="flex justify-center">
        <Link href="/">Home</Link>
      </div>
      <Footer />
    </div>
  </div>
</Layout>
