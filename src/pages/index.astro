---
import Layout from "../layouts/Layout.astro"
import Footer from "../components/Footer.astro"
import RyuappLogo from "../components/icons/ryuapp.astro"
import Link from "../components/Link.astro"
---

<Layout title="" description="Ryu is a frontend developer in Japan.">
  <div class="flex justify-center bg-zinc-900 text-white">
    <div class="my-16 flex max-w-lg flex-col items-center justify-center tall:my-0 tall:h-screen">
      <div class="mb-5 flex">
        <RyuappLogo />
      </div>
      <h1 class="mb-5 text-center text-2xl text-neutral-400">
        <span class="text-brand">Ryu</span> is a frontend developer in Japan.
      </h1>
      <nav class="grid justify-items-start gap-1">
        <Link href="/dev" variant="menu">Development</Link>
        <Link href="/privacy" variant="menu">Privacy Policy</Link>
        <Link href="https://github.com/ryuapp" variant="menu">GitHub</Link>
      </nav>
      <Footer isDark={true} hiddenIcons={true} />
    </div>
  </div>
</Layout>
