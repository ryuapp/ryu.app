---
import Layout from "../layouts/Layout.astro"
import Footer from "../components/Footer.astro"
import RyuappLogo from "../components/icons/ryuapp.astro"
import Link from "../components/Link.astro"
import { siteConfig } from "../../config/site.ts"

const description = "Ryu is a frontend developer in Japan."
---

<Layout description={description}>
  <div class="flex min-h-svh justify-center bg-zinc-900 text-white">
    <div class="flex max-w-lg flex-col justify-center gap-4">
      <div>
        <div class="flex justify-center">
          <RyuappLogo />
        </div>
        <h1 class="text-lg font-bold">Ryu</h1>
        <p class="text-neutral-400">Frontend Developer</p>
      </div>

      <nav class="grid justify-items-start gap-1">
        {
          siteConfig.mainNav.map((link) => (
            <Link href={link.href} variant="menu">
              {link.title}
            </Link>
          ))
        }
      </nav>
      <Footer isDark={true} />
    </div>
  </div>
</Layout>
