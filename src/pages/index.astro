---
import Layout from "../layouts/Layout.astro"
import Footer from "../components/Footer.astro"
import RyuappLogo from "../components/icons/ryuapp.astro"
import Link from "../components/Link.astro"
import { siteConfig } from "../../config/site.ts"

const description = "Ryu is a frontend developer in Japan."
---

<Layout description={description}>
  <div class="flex min-h-svh justify-center bg-zinc-900 text-white">
    <div class="flex max-w-lg flex-col items-center justify-center gap-4">
      <div class="flex">
        <RyuappLogo />
      </div>
      <h1 class="text-center text-2xl text-neutral-400">
        <span class="text-brand">Ryu</span> is a frontend developer in Japan.
      </h1>
      <nav class="grid justify-items-start gap-1">
        {
          siteConfig.mainNav.map((link) => (
            <Link href={link.href} variant="menu">
              {link.title}
            </Link>
          ))
        }
      </nav>
      <Footer isDark={true} />
    </div>
  </div>
</Layout>
