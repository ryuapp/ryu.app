---
import BaseHead from "../components/BaseHead.astro"
import Link from "../components/Link.astro"
import Footer from "../components/Footer.astro"
import { React } from "../utils/react"

import type { MarkdownLayoutProps } from "astro"
import Breadcrumbs, { Breadcrumb } from "../components/Breadcrumbs.astro"

type Props = MarkdownLayoutProps<{
  title: string
  description: string | undefined
  breadcrumbs: Array<Breadcrumb>
}>
const { frontmatter } = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={frontmatter.title} description={frontmatter.description} />
  </head>
  <body class="bg-neutral-50 text-neutral-900" ontouchstart="">
    <div id="swup" class="transition-fade mx-auto max-w-5xl">
      <main class="mx-5 mt-5">
        <Breadcrumbs title={frontmatter.title} items={frontmatter.breadcrumbs} />
        <div id="markup">
          <slot />
        </div>
      </main>
      <div class="mb-10 mt-5 flex justify-center">
        <Link href="/" name="Home" />
      </div>
      <Footer />
    </div>
    <React client:only="react" />
  </body>
</html>
