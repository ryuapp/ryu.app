---
import BaseHead from "../components/BaseHead.astro"
import Link from "../components/Link.astro"
import Footer from "../components/Footer.astro"
import Breadcrumbs, { type Breadcrumb } from "../components/Breadcrumbs.astro"
import Svelte from "../utils/svelte.svelte"

type Frontmatter = {
  title: string
  description?: string
  breadcrumbs?: Array<Breadcrumb>
}
type Props = {
  frontmatter: Frontmatter
}

const { frontmatter } = Astro.props
const { title, description, breadcrumbs } = frontmatter
export const prerender = true
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-neutral-50 text-neutral-900" ontouchstart="">
    <main class="transition-fade mx-auto max-w-5xl">
      <div class="mx-5 mt-5">
        <Breadcrumbs title={title} items={breadcrumbs} />
        <div id="markup">
          <slot />
        </div>
      </div>
      <div class="mb-10 mt-5 flex justify-center">
        <Link href="/">Home</Link>
      </div>
      <Footer />
    </main>
    <Svelte client:load />
  </body>
</html>
